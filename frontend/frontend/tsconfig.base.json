{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hh/consequences": [
        "libs/consequences/src/index.ts"
      ],
      "@hh/home": [
        "libs/home/src/index.ts"
      ],
      "@hh/kids": [
        "libs/kids/src/index.ts"
      ],
      "@hh/parents": [
        "libs/parents/src/index.ts"
      ],
      "@hh/rewards": [
        "libs/rewards/src/index.ts"
      ],
      "@hh/shared": [
        "libs/shared/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
